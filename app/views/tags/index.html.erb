<h1>All Tags</h1>

<ul id="tags">
    <% @tags.each do |tag| %>
        <li>
            <!-- When the template is rendered, it will output HTML like this: -->
            <!-- <a href="/tag/1">First Sample Article</a> -->
            <%= link_to tag.name, tag_path(tag), class: 'article_tag' %>
            <%= link_to "Delete", tag_path(tag), method: :delete, data: {confirm: "Really delete the tag?"}
 %>
        </li>
    <% end %>
</ul>

